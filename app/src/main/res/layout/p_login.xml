        android:layout_marginBottom="5dp"
        android:background="@drawable/gradient_affect"
        app:layout_constraintBottom_toBottomOf="@id/gradient_9"
        app:layout_constraintEnd_toEndOf="@id/gradient_9"
        app:layout_constraintStart_toStartOf="@id/gradient_9"
        app:layout_constraintTop_toTopOf="@id/gradient_9" />

    <View
        android:id="@+id/gradient_11"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/dp5"
        android:layout_marginBottom="5dp"
        android:background="@drawable/gradient_affect"
        app:layout_constraintBottom_toBottomOf="@id/gradient_10"
        app:layout_constraintEnd_toEndOf="@id/gradient_10"
        app:layout_constraintStart_toStartOf="@id/gradient_10"
        app:layout_constraintTop_toTopOf="@id/gradient_10" />

    <View
        android:id="@+id/gradient_12"
        android:layout_width="@dimen/dp0"
