        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/dp5"
        android:layout_marginBottom="5dp"
        android:background="@drawable/gradient_affect"
        app:layout_constraintBottom_toBottomOf="@id/gradient_7"
        app:layout_constraintEnd_toEndOf="@id/gradient_7"
        app:layout_constraintStart_toStartOf="@id/gradient_7"
        app:layout_constraintTop_toTopOf="@id/gradient_7" />

    <View
        android:id="@+id/gradient_9"
        android:layout_width="@dimen/dp0"
