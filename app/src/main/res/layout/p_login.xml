    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navyBlue">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#73000000" />

    <!--Gradient-Start-->

    <View
