        app:layout_constraintBottom_toBottomOf="@id/gradient_11"
        app:layout_constraintEnd_toEndOf="@id/gradient_11"
        app:layout_constraintStart_toStartOf="@id/gradient_11"
        app:layout_constraintTop_toTopOf="@id/gradient_11" />

    <View
        android:id="@+id/gradient_13"
        android:layout_width="@dimen/dp0"
